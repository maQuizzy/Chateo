@model User

@{
    ViewBag.Title = "Profile";
    ViewBag.Header = "ProfileSettings";
    ViewBag.Footer = "Default";
}

<link href="~/css/profilesettings.css" rel="stylesheet" />

<div class="profile-settings">
    <div class="profile-settings__change-avatar">
        @if (Model.Avatar != null)
        {
            <img class="user-avatar" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
        }
        else
        {
            <img class="user-no-avatar" src="/img/no-avatar-icon.svg" alt="" />
        }
        <form asp-action="UploadAvatar" method="post" enctype="multipart/form-data">
            <label class="avatar-upload">
                <input name="uploadedFile" type="file" onchange="form.submit()" />
                <img src="~/img/plus_circle.svg" alt="" />
            </label>
        </form>
    </div>
    <form asp-controller="Profile" asp-action="Settings" method="post">
        <input type="text" asp-for="FirstName" placeholder="First Name (Required)" value="@Model.FirstName" />
        <input type="text" asp-for="LastName" placeholder="Last Name (Required)" value="@Model.LastName" />
        <input type="submit" value="Save">
    </form>
</div>