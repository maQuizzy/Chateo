@model Chateo.Models.ViewModels.ProfileSettingsViewModel

@{
    ViewBag.Title = "Profile";
    ViewBag.Header = "ProfileSettings";
    ViewBag.Footer = "Contacts";
}

<link href="~/css/profilesettings.css" rel="stylesheet" />

<div class="profile-settings">
    <img src="/img/change-avatar.png" alt="" />
    <form asp-controller="Profile" asp-action="Settings" method="post">
        <input type="text" asp-for="FirstName" placeholder="First Name (Required)" value="" />
        <input type="text" asp-for="LastName" placeholder="Last Name (Required)" value="" />
        <input type="submit" value="Save">
    </form>
</div>